<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <fragment
        android:id="@+id/maps"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/baground"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/lokasiawals"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/backgroundedittext"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:hint="Dari Kemana ?"
            android:maxLines="1" />

        <TextView
            android:id="@+id/lokasitujuans"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/backgroundedittext"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:hint="Mau Kemana ?"
            android:maxLines="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            tools:mockup_opacity="5dp">


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2s"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/linear1s"

        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/backgroundedittext"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Nama Driver"


            />

        <TextView
            android:id="@+id/txtnamadriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="5dp"
            android:text="Nando Septian Husni"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1s"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/backgroundedittext"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="No hp"
            />

        <TextView
            android:id="@+id/txthpdriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="5dp"
            android:text="087429487"

            />

    </LinearLayout>


</RelativeLayout>