<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <fragment
        android:id="@+id/maps"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_edit_text"
        android:background="@drawable/baground"
        android:orientation="vertical"
        android:padding="@dimen/margin_edit_text">


        <TextView
            android:id="@+id/lokasiawals"
            android:layout_width="match_parent"
            android:layout_height="@dimen/jarak35dp"
            android:layout_marginLeft="@dimen/margin_edit_text"
            android:layout_marginRight="@dimen/margin_edit_text"
            android:layout_marginTop="@dimen/padding5dp"
            android:background="@drawable/backgroundedittext"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:hint="@string/hint_from"
            android:maxLines="1" />

        <TextView
            android:id="@+id/lokasitujuans"
            android:layout_width="match_parent"
            android:layout_height="@dimen/jarak35dp"
            android:layout_marginLeft="@dimen/margin_edit_text"
            android:layout_marginRight="@dimen/margin_edit_text"
            android:layout_marginTop="@dimen/padding5dp"
            android:background="@drawable/backgroundedittext"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:hint="@string/hint_to"
            android:maxLines="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_edit_text"
            android:layout_marginRight="@dimen/margin_edit_text"
            android:orientation="horizontal"
            tools:mockup_opacity="@dimen/padding5dp">


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2s"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size"
        android:layout_above="@+id/linear1s"

        android:layout_marginBottom="@dimen/padding5dp"
        android:layout_marginLeft="@dimen/margin_edit_text"
        android:layout_marginRight="@dimen/margin_edit_text"
        android:background="@drawable/backgroundedittext"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_size"
            android:layout_weight="1"
            android:padding="@dimen/padding5dp"
            android:text="Nama Driver"


            />

        <TextView
            android:id="@+id/txtnamadriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding5dp"
            android:layout_marginRight="@dimen/padding5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="@dimen/padding5dp"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1s"
        android:layout_width="match_parent"
        android:layout_height="@dimen/taudah_size"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/padding5dp"
        android:layout_marginLeft="@dimen/margin_edit_text"
        android:layout_marginRight="@dimen/margin_edit_text"
        android:background="@drawable/backgroundedittext"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/taudah_size"
            android:layout_weight="1"
            android:padding="@dimen/padding5dp"
            android:text="No hp" />

        <TextView
            android:id="@+id/txthpdriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding5dp"
            android:layout_marginRight="@dimen/padding5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="@dimen/padding5dp"

            />

    </LinearLayout>


</RelativeLayout>