<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_edit_text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/texttgl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:fontFamily="sans-serif-condensed"
                android:gravity="right"
                android:padding="@dimen/padding5dp"
                android:textColor="@color/text_color" />


            <TextView
                android:id="@+id/txtawal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_edit_text"
                android:drawableLeft="@android:drawable/ic_menu_directions"
                android:fontFamily="sans-serif-condensed"
                android:lines="1"
                android:padding="@dimen/padding5dp" />

            <TextView
                android:id="@+id/txtakhir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_menu_directions"
                android:fontFamily="sans-serif-condensed"
                android:lines="1"
                android:padding="@dimen/padding5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/jarak1dp"
                android:layout_marginTop="@dimen/padding5dp"
                android:background="@color/garis"/>

            <TextView
                android:id="@+id/txtharga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="right"
                android:lines="1"
                android:padding="@dimen/padding5dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>